<resources>
	<declare-styleable name="InkSeekbar">
		<attr name="backgroundColor" format="color|reference"/>
		<attr name="primaryColor" format="color|reference"/>
		<attr name="secondaryColor" format="color|reference"/>
		<attr name="markerIcon" format="reference"/>
		<attr name="markerColor" format="color|reference"/>
		<attr name="corners" format="dimension|reference"/>
		<attr name="backgroundCorners" format="dimension|reference"/>
		<attr name="primaryCorners" format="dimension|reference"/>
		<attr name="secondaryCorners" format="dimension|reference"/>
		<attr name="markerCorners" format="dimension|reference"/>
		<attr name="backgroundColors" format="reference"/>
		<attr name="primaryColors" format="reference"/>
		<attr name="secondaryColors" format="reference"/>
		<attr name="markerColors" format="reference"/>

		<attr name="clickableMode" format="enum">
			<enum name="LINE" value="0"/>
			<enum name="MARKER" value="1"/>
			<enum name="MAX_MARKER_OR_LINE" value="2"/>
			<enum name="ALL" value="3"/>
		</attr>

		<attr name="backgroundGradientOrientation" format="enum">
			<enum name="TOP_BOTTOM" value="0"/>
			<enum name="TR_BL" value="1"/>
			<enum name="RIGHT_LEFT" value="2"/>
			<enum name="BR_TL" value="3"/>
			<enum name="BOTTOM_TOP" value="4"/>
			<enum name="BL_TR" value="5"/>
			<enum name="LEFT_RIGHT" value="6"/>
			<enum name="TL_BR" value="7"/>
		</attr>

		<attr name="primaryGradientOrientation" format="enum">
			<enum name="TOP_BOTTOM" value="0"/>
			<enum name="TR_BL" value="1"/>
			<enum name="RIGHT_LEFT" value="2"/>
			<enum name="BR_TL" value="3"/>
			<enum name="BOTTOM_TOP" value="4"/>
			<enum name="BL_TR" value="5"/>
			<enum name="LEFT_RIGHT" value="6"/>
			<enum name="TL_BR" value="7"/>
		</attr>

		<attr name="secondaryGradientOrientation" format="enum">
			<enum name="TOP_BOTTOM" value="0"/>
			<enum name="TR_BL" value="1"/>
			<enum name="RIGHT_LEFT" value="2"/>
			<enum name="BR_TL" value="3"/>
			<enum name="BOTTOM_TOP" value="4"/>
			<enum name="BL_TR" value="5"/>
			<enum name="LEFT_RIGHT" value="6"/>
			<enum name="TL_BR" value="7"/>
		</attr>

		<attr name="markerGradientOrientation" format="enum">
			<enum name="TOP_BOTTOM" value="0"/>
			<enum name="TR_BL" value="1"/>
			<enum name="RIGHT_LEFT" value="2"/>
			<enum name="BR_TL" value="3"/>
			<enum name="BOTTOM_TOP" value="4"/>
			<enum name="BL_TR" value="5"/>
			<enum name="LEFT_RIGHT" value="6"/>
			<enum name="TL_BR" value="7"/>
		</attr>

		<attr name="mode" format="enum">
			<enum name="PROGRESS" value="0"/>
			<enum name="SEEKBAR" value="1"/>
		</attr>

		<attr name="lineWidth" format="dimension|reference"/>
		<attr name="markerWidth" format="dimension|reference"/>
		<attr name="markerHeight" format="dimension|reference"/>
		<attr name="primaryMargin" format="dimension|reference"/>
		<attr name="secondaryMargin" format="dimension|reference"/>
		<attr name="primaryProgress" format="integer"/>
		<attr name="secondaryProgress" format="integer"/>
		<attr name="maxProgress" format="integer"/>
		<attr name="orientation">
			<enum name="TOP_DOWN" value="0" />
			<enum name="DOWN_TOP" value="1" />
			<enum name="LEFT_RIGHT" value="2" />
			<enum name="RIGHT_LEFT" value="3" />
		</attr>
	</declare-styleable>
</resources>